.project-details-menu .md-header-items
  background-color background-color

.project-details-tab
  padding-right 70px
  padding-left 70px

.project-details-tab.active
  color active-color !important

.separator:after
  position absolute
  top 0
  right 0
  height 24px
  margin-top 12px
  border solid 1px separator-color
  content ""

.settings-icon:before,
.repository-icon:before,
.machines-icon:before,
.factories-icon:before,
.developer-icon:before
  position relative
  margin-right 20px

.settings-icon:before
  font normal normal normal 20px / 1 "material-design"
  content: "\E0C6"

.repository-icon:before
  font normal normal normal 20px / 1 FontAwesome
  content "\f126"

.machines-icon:before
  font normal normal normal 20px / 1 FontAwesome
  content "\f1b2"

.factories-icon:before
  font normal normal normal 20px / 1 FontAwesome
  content "\f135"

.developer-icon:before
  font normal normal normal 20px / 1 "material-design"
  content: "\E266"
