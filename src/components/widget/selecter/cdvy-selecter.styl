$cdvy-selecter-color = $label-info-color

.cdvy-selecter
  height 150px
  width 150px
  border-color $form-element-border-color
  background-color $background-color
  border-width 2px
  border-style solid
  codenvy-border-radius(3px)
  -webkit-box-shadow 0 1px 1px rgba(0, 0, 0, 0.05)
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.05)
  padding-top 12px
  margin-left 16px
  margin-right 16px
  color $cdvy-selecter-color

  &:hover
    background-color $cdvy-selecter-color
    color $background-color

.cdvy-selecter .title
  padding-top 6px
  padding-bottom 6px

.cdvy-selecter .body
  height 50px
  margin-bottom 8px

.cdvy-selecter select
  display block
  box-shadow: none;
  width 118px
  height 20px
  padding-left 3px
  padding-right 3px
  font-size 12px
  -webkit-appearance none
  -moz-appearance none
  -ms-appearance none
  appearance none


.cdvy-selecter md-icon
  font-size 60px
  text-align center
  margin-left auto
  margin-right auto
  margin-top 0px
  margin-bottom 0px
  padding 0px
  height 74px
  width 74px

.cdvy-selecter .title
  font-size 12px
  text-align center
  text-transform uppercase

.cdvy-selecter select
  margin-left 16px
  margin-right 16px
  display none

.cdvy-selecter-active
  border-color $primary-color
  color $primary-color

  &:hover
    background-color $background-color


.cdvy-selecter-active .body
  background-color $primary-color

.cdvy-selecter-active .title
  background-color $primary-color
  color $background-color

.cdvy-selecter-active select
  display block !important
  color $primary-color
  background-color $background-color

.cdvy-selecter-active select:hover
  background-color #fafafa
  border-style solid
  border-width 1px
  text-align left
  color $primary-color


.cdvy-selecter-active:hover .body
  background-color $primary-color !important
  color $background-color

.cdvy-selecter-active:hover md-icon
  color $primary-color

.cdvy-selecter:hover select
  display block !important



.cdvy-selecter:active .body
  display block

cdvy-selecter-icon()
  content '\25BC'
  margin-left -35px
  margin-top 2px
  pointer-events none
  -webkit-transform scaleY(0.6) scaleX(1)
  -ms-transform scaleY(0.6) scaleX(1)
  transform scaleY(0.6) scaleX(1)
  z-index 9

.cdvy-selecter:hover .selecter:after
  color $cdvy-selecter-color
  cdvy-selecter-icon()

.cdvy-selecter-active .selecter:after
  cdvy-selecter-icon()
