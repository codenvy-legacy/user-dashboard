.cdvy-tab md-tab
  padding-top 14px
  padding-left 70px
  padding-right 70px

.cdvy-tab md-tab md-tab-label
  font-family: Lato, sans-serif;
  text-transform uppercase
  font-size 14px
  margin-top 2px

.cdvy-tab  md-tab.active
  color active-color !important

.cdvy-tab  md-tab:before
  font-size 20px
  margin-right 20px
  position relative

.cdvy-tab:last-child  md-tab:after
  display none

.cdvy-tab  md-tab:after
  position absolute
  top 0
  right 1px
  height 24px
  margin-top 12px
  border solid 1px sub-menu-separator-color
  content ""
