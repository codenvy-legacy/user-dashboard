section:not(.md-paginating) .md-header-items
  width 99.9%
  display flex
  flex-flow row nowrap
  justify-content flex-start

section:not(.md-paginating) .cdvy-tab
  max-width 600px !important
  align-self auto
  flex auto

section:not(.md-paginating) .cdvy-tab md-tab
  width 100% !important
  padding-top 14px
  min-width 180px

.cdvy-tab md-tab
  display inline-block

.md-paginating .cdvy-tab md-tab
  padding-top 14px
  padding-left 100px
  padding-right 100px

.cdvy-tab md-tab:not(.material-design) md-tab-label
  bottom 0

.cdvy-tab md-tab md-tab-label
  font-family Lato, sans-serif
  text-transform uppercase
  position relative
  font-size 14px
  bottom: 4px;

.cdvy-tab md-tab.active
  color active-color !important

.md-no-transition[style^="display: block; left: 0px;"] + .cdvy-tab md-tab
  color active-color !important

.cdvy-tab md-tab:before
  font-size 20px
  margin-right 20px
  position relative

.cdvy-tab:last-child md-tab:after
  display none

.cdvy-tab md-tab:after
  position absolute
  top 0
  right 1px
  height 24px
  margin-top 12px
  border solid 1px sub-menu-separator-color
  content ""
